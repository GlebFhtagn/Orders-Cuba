<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.tasks.web.screens.carrier">
    <data>
        <instance id="carrierDc"
                  class="com.company.tasks.entity.Carrier"
                  view="_local">
            <loader/>
        </instance>
        <collection id="trucksDc" class="com.company.tasks.entity.Truck">
            <loader id="trucksDl">
                <query>
                    <![CDATA[select e from tasks_Truck e ]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="carrierDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="costField" property="cost"/>
                <pickerField caption="Truck" dataContainer="trucksDc">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
